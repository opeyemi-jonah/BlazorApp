@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Add @IncrementByAmount</button>
<button class="btn btn-danger" @onclick="ReduceByAmount">Remove @DecrementByAmount </button>
<button class="btn btn-secondary" @onclick="ResetCount">Reset</button>

@code {
    private int currentCount = 0;
    
    [Parameter]
    public int IncrementByAmount {get; set;} = 1;
    
    [Parameter]
    public int DecrementByAmount {get; set;} = 1;
    private void IncrementCount()
    {
        currentCount+= IncrementByAmount;
    }

    private void ResetCount()
    {
        currentCount = 0;
    }

    private void ReduceByAmount()
    {
        currentCount -= DecrementByAmount;
    }
}
